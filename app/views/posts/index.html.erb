 <div class="main-content-area">
    <section class="page-title">
      <div class="container">
        <div class="row">
          <div class="col-md-6 col-sm-7 co-xs-12 text-left">
            <h1><%= t ".#{@type}.page_title" %></h1>
          </div>
          <div class="col-md-6 col-sm-5 co-xs-12 text-right">
            <div class="bread">
              <ol class="breadcrumb">
                <li><%= link_to t("page_title.home"), root_path %></li>
                <li class="active"><%= t ".#{@type}.breadcrumb" %></li>
              </ol>
            </div>
          </div>
        </div>
      </div>
    </section>
    <% if @type == Settings.post.types.question %>
      <section class="section-padding-80 white" id="questions">
        <div class="container">
          <div class="row">
            <div class="col-md-8 col-sm-12">
              <div class="listing">
                <div class="listing-area">
                  <%= render partial: "post", collection: @posts %>
                  <div class="text-center clearfix">
                    <%= paginate @posts %>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-4 col-sm-12">
              <div class="side-bar">
                <div class="widget">
                  <div class="latest-news">
                    <h2><%= t ".#{@type}.popular_post" %></h2>
                    <hr class="widget-separator no-margin">
                    <div class="popular-posts">
                      <%= render partial: "popular_post", collection: @popular_posts, as: :post %>
                    </div>
                    <div class="margin-right-15 pull-right">
                      <%= link_to posts_path(type: :question) do %>
                        <i class="fa fa-question-circle "></i>
                        <%= t ".#{@type}.all_post" %>
                      <% end %>
                    </div>
                  </div>
                </div>
                <div class="widget">
                  <h2><%= t ".top_users" %></h2>
                  <hr class="widget-separator no-margin">
                  <div class="media-group">
                    <%= render partial: "user", collection: @top_users, as: :user %>
                  </div>
                  <div class="margin-right-15 pull-right">
                    <%= link_to users_path do %>
                      <i class="fa fa-users"></i>
                      <%= t ".all_users" %>
                    <% end %>
                  </div>
                </div>
                <div class="widget">
                  <div class="widget_tag_cloud">
                    <h2><%= t ".popular_tags" %></h2>
                    <hr class="widget-separator no-margin">
                    <div class="tag_cloud">
                      <% @popular_tags.each do |tag| %>
                        <%= link_to tag do %>
                          <%= tag.name %>
                          <span class="posts-count"><%= tag.posts_count %></span>
                        <% end %>
                      <% end %>
                    </div>
                    <div class="all_tags pull-right">
                      <%= link_to tags_path do %>
                        <span class="glyphicon glyphicon-tags"></span>
                        <%= t ".all_tag" %>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    <% else %>
      <section id="blog" class="custom-padding white">
      <div class="container">
        <div class="row">
          <div class="col-sm-12 col-xs-12 col-md-8 col-md-push-4">
            <div id="posts-masonry" class="posts-masonry">
              <%= render partial: "post", collection: @posts %>
            </div>
            <div class="clearfix"></div>
            <div class="text-center  section-padding-40">
              <%= paginate @posts %>
            </div>
          </div>
          <div class="col-sm-12 col-xs-12 col-md-4 col-md-pull-8">
            <div class="side-bar">
              <div class="widget">
                <div class="latest-news">
                  <h2><%= t ".#{@type}.popular_post" %></h2>
                  <hr class="widget-separator no-margin">
                  <div class="news-post">
                    <%= render partial: "popular_post", collection: @popular_posts, as: :post %>
                  </div>
                  <div class="margin-right-15 pull-right">
                    <%= link_to posts_path(type: :article) do %>
                      <i class="fa fa-file-text-o"></i>
                      <%= t ".#{@type}.all_post" %>
                    <% end %>
                  </div>
                </div>
              </div>
              <div class="widget">
                <h2><%= t ".top_users" %></h2>
                <hr class="widget-separator no-margin">
                <div class="media-group">
                  <%= render partial: "user", collection: @top_users, as: :user %>
                </div>
                <div class="margin-right-15 pull-right">
                  <%= link_to users_path do %>
                    <i class="fa fa-users"></i>
                    <%= t ".all_users" %>
                  <% end %>
                </div>
              </div>
              <div class="widget">
                <div class="widget_tag_cloud">
                  <h2><%= t ".popular_tags" %></h2>
                  <hr class="widget-separator no-margin">
                  <div class="tag_cloud">
                    <% @popular_tags.each do |tag| %>
                      <%= link_to tag do %>
                        <%= tag.name %>
                        <span class="posts-count"><%= tag.posts_count %></span>
                      <% end %>
                    <% end %>
                  </div>
                  <div class="all_tags pull-right">
                    <%= link_to tags_path do %>
                      <span class="glyphicon glyphicon-tags"></span>
                      <%= t ".all_tag" %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <% end %>
  </div>
