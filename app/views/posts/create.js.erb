<% if flash[:success] %>
  window.location.replace('<%= post_path(@post) %>');
<% else %>
  <% if @post.errors.full_messages.present? %>
    $('#error_message').html('<%= raw(@post.errors.full_messages.map { |msg| content_tag(:li, msg) }.join) %>');
  <% else %>
    $('#error_message').html('<%= raw(content_tag(:li, t(".tag_error"))) %>');
  <% end %>
  swal({
    position: 'top-end',
    type: 'error',
    title: I18n.t('posts.create.flash_error'),
    showConfirmButton: false,
    timer: 1000
  });
<% end %>
