<% if flash[:success] %>
  window.location.replace('<%= post_path(@post) %>');
<% else %>
  $('#error_message').html('<%= raw(@post.errors.full_messages.map { |msg| content_tag(:li, msg) }.join) %>');
  swal({
    position: 'top-end',
    type: 'error',
    title: I18n.t('posts.create.flash_danger'),
    showConfirmButton: false,
    timer: 1000
  });
<% end %>
