<% if post.question? %>
  <div class="listing-grid ">
    <div class="row">
      <div class="col-md-2 col-sm-2 col-xs-12 hidden-xs">
        <%= link_to post.user, data: {placement: "bottom", toggle: "tooltip", original_title: post.user.name} do %>
          <% image_tag post.user.avatar.url, class: "img-responsive center-block img-medium" %>
        <% end %>
        <!-- <span class="tick"><i class="fa fa-check" aria-hidden="true"></i></span> -->
      </div>
      <div class="col-md-7 col-sm-8  col-xs-12">
        <h3><%= link_to post.title, post %></h3>
        <div class="listing-meta">
          <span><i class="fa fa-clock-o" aria-hidden="true"></i><%= time_ago_in_words post.created_at %></span>
        </div>
      </div>
      <div class="col-md-3 col-sm-2 col-xs-12">
        <ul class="question-statistic">
          <li>
            <a data-toggle="tooltip" data-placement="bottom" data-original-title="<%= t ".votes" %>">
              <span class="blue-color"><i class="fa fa-sort" aria-hidden="true"></i><%= votes_count post.reactions %></span>
            </a>
          </li>
          <li class="">
            <a data-toggle="tooltip" data-placement="bottom" data-original-title="<%= t ".#{post.type}.replies" %>">
              <span class="blue-color"><i class="fa fa-reply" aria-hidden="true"></i><%= post.replies.length %></span>
            </a>
          </li>
          <li>
            <a data-toggle="tooltip" data-placement="bottom" data-original-title="<%= t ".views" %>">
              <span class="blue-color"><i class="fa fa-eye" aria-hidden="true"></i><%= views_count post.views %></span>
            </a>
          </li>
        </ul>
      </div>
      <div class="col-md-10 col-sm-10  col-xs-12">
      <div class="post-content margin-bottom-20 hidden-overflow">
          <%= raw post.content %>
        </div>
        <div class="tagcloud pull-right">
          <% post.tags.each do |tag| %>
            <%= link_to tag.name, tag %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <div class="col-xs-12 col-sm-12 col-md-4  col-lg-6">
    <div class="blog-grid">
      <div class="blog-image">
        <%= link_to post, class: "bold-text" do %>
          <%= image_tag post.cover_image.url || "no_cover_image.png", class: "img-responsive cover-img" %>
        <% end %>
      </div>
      <div class="blog-content article-item">
        <h3 class="margin-bottom-10 article-title-item">
          <%= link_to post.title.truncate(35, separator: ' '), post, class: "post-title" %>
        </h3>
        <span class="article-time">
          <i class="fa fa-clock-o" aria-hidden="true"></i>
          <%= time_ago_in_words post.created_at %>
        </span>
        <% if post.tags.present? %>
          <div class="listing-grid margin-top-10  tag-list-in-article">
            <div class="tagcloud pull-left">
              <% post.tags.each do |tag| %>
                <%= link_to tag.name, tag %>
              <% end %>
            </div>
          </div>
        <% end %>
        <p class="active-content hidden-overflow"><%= post.content %></p>
      </div>
      <div class="blog-footer">
        <ul class="like-comment">
          <li>
            <a class="blue-color no-hover" data-toggle="tooltip" data-placement="bottom"
              data-original-title="<%= t ".votes" %>">
              <i class="fa fa-sort"></i><%= votes_count post.reactions %>
            </a>
          </li>
          <li>
            <a class="blue-color no-hover" data-toggle="tooltip" data-placement="bottom"
              data-original-title="<%= t ".#{post.type}.replies" %>">
              <i class="icon-chat"></i><%= post.replies.length %>
            </a>
          </li>
          <li>
            <a class="blue-color no-hover" data-toggle="tooltip" data-placement="bottom"
              data-original-title="<%= t ".views" %>">
              <i class="fa fa-eye"></i><%= post.views.length %>
            </a>
          </li>
        </ul>
        <%= link_to post, class: "more-btn pull-right btn btn-primary" do %>
          <i class="fa fa-long-arrow-right"></i>
          <%=  t ".more" %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
