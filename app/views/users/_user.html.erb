<div class="col-xs-12 col-sm-6 col-md-3 col-lg-3 padding-15 margin-bottom-50">
  <div class="user-item">
    <% if user_signed_in? %>
      <div class="ticker-follow-<%= is_following user %>"><%= t(".following") %></div>
    <% end %>
    <%= image_tag user.avatar.url, class: "avatar" %>
    <p></p>
    <%= link_to user.name, user, class: "user-name", title: user.name %>
    <p></p>
    <div>
      <span class="badge info-item" data-toggle="tooltip" title="<%= t ".posts" %>">
        <span class="fa fa-pencil"> <%= user.posts_count %></span>
      </span>
      <span class="badge info-item" data-toggle="tooltip" title="<%= t ".replies" %>">
        <span class="fa fa-comments-o"> <%= user.replies_count %></span>
      </span>
      <span class="badge info-item" data-toggle="tooltip" title="<%= t ".points" %>">
        <span class="fa fa-trophy"> <%= user.point %></span>
      </span>
    </div>
    <p></p>
    <div class="follow">
      <% if user_signed_in? && is_following(user) %>
        <%= link_to t(".unfollow"), "javascript:void(0)", class: "btn btn-warning btn-xs",
         data:{f_id: user.id, f_type: user.class.name, method: :delete, id: get_follow_id(user)} %>
      <% elsif user_signed_in? %>
        <%= link_to t(".follow"), "javascript:void(0)", class: "btn btn-success btn-xs",
         data:{f_id: user.id, f_type: user.class.name, method: :post, id: ""} %>
      <% end %>
    </div>
  </div>
</div>
