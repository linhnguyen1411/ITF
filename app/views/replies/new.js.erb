$('#reply_form_<%= @reply.parent_id %>')
  .html('<%= j(render"replies/form", reply: @reply, submit: t(".#{@type}.post_reply"), type: @type) %>')
  .hide().delay(100).slideDown(700);
var ck = $('.ckeditor');
$.each(ck, function(i) {
  if (ck[i].id == 'reply_content_<%= @reply.parent_id %>'){
    CKEDITOR.replace(ck[i]);
  }
})
var reply = $('#reply_form_<%= @reply.parent_id %>').closest('.reply').find('.show-reply-form');
reply.addClass('hide-reply-form');
reply.removeClass('show-reply-form');
reply.html('<i class="fa fa-times-circle-o" aria-hidden="true"></i> '
  + '<%= t ".#{@type}.cancel_reply" %>');
var cancel_edit = $('#reply_form_<%= @reply.parent_id %>').closest('.reply').find('.cancel-edit-reply');
cancel_edit.addClass('edit-reply');
cancel_edit.removeClass('cancel-edit-reply');
cancel_edit.html('<i class="fa fa-pencil-square-o" aria-hidden="true"></i> '
  + I18n.t('posts.reply.edit'));
