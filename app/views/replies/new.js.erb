$('#reply_form_<%= @reply.parent_id %>').html('<%= j(render"replies/form", reply: @reply, type: @type) %>')
  .hide().delay(100).slideDown(700);
var ck = $('.ckeditor');
$.each(ck, function(i) {
  if (ck[i].id == 'reply_content_<%= @reply.parent_id %>'){
    CKEDITOR.replace(ck[i]);
  }
})
$('.show-reply-form').addClass('hide-reply-form');
$('.show-reply-form').removeClass('show-reply-form');
<% if @type %>
  $('.show-reply-form').html('<i class="fa fa-times-circle-o" aria-hidden="true"></i> '
    + I18n.t('posts.show.' + type + '.cancel_reply'));
<% else %>
  $('.show-reply-form').html('<i class="fa fa-times-circle-o" aria-hidden="true"></i> '
    + I18n.t('posts.show.cancel_reply'));
<% end %>
