<% if flash[:success] %>
  var children_replies = '#children_replies_<%= @reply.parent_id %>';
  $('<%= j render partial: "posts/children_reply", collection: [@reply], as: :reply %>')
    .hide().prependTo(children_replies).delay(500).slideDown(500);
  $('.hide-reply-form').trigger('click');
<% else %>
  swal({
    position: 'top-end',
    type: 'error',
    title: I18n.t('replies.create.reply.flash_danger'),
    text: "",
    timer: 1000,
    showConfirmButton: false,
  }).catch(swal.noop);
<% end %>
<% flash.clear %>
