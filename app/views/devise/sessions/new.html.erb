
<div class="main-content-area">
  <section class="page-title">
    <div class="container">
      <div class="row">
        <div class="col-md-6 col-sm-7 co-xs-12 text-left">
          <h1><%= t ".page_title" %></h1>
        </div>
        <div class="col-md-6 col-sm-5 co-xs-12 text-right">
          <div class="bread">
            <ol class="breadcrumb">
              <li><%= link_to t("page_title.home"), root_path %></li>
              <li class="active"><%= t ".breadcrumb" %></li>
            </ol>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="section-padding-80 white" id="login">
    <div class="container">
      <div class="row">
        <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
          <div class="box-panel">
            <a href="#" class="btn btn-default facebook"><i class="fa fa-facebook icons"></i> Sign In with Facebook</a>
            <a href="#" class="btn btn-default google"><i class="fa fa-google-plus icons"></i> Sign In with Google</a>
            <p class="text-center margin-top-10"><span class="span-line"><%= t ".or" %></span>
            </p>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-group">
                <%= f.label :email %><br />
                <%= f.email_field :email, required: true, 
                  placeholder: t(".placeholder.email"), class: "form-control" %>
              </div>

              <div class="form-group">
                <%= f.label :password %><br />
                <%= f.password_field :password, placeholder: t(".placeholder.password"), class: "form-control",
                  maxlength: Settings.user.max_password, minlength: Settings.user.min_password,  required: true %>
              </div>

              <div class="form-group">
                <div class="row">
                  <div class="col-xs-6">
                    <div class="checkbox flat-checkbox">
                      <label>
                        <%= f.check_box :remember_me %>
                        <span class="fa fa-check"></span><%= f.label :remember_me %>
                      </label>
                    </div>
                  </div>
                  <div class="col-xs-6 text-right">
                    <p class="help-block"><a data-toggle="modal" href="#myModal">Forgot password?</a>
                    </p>
                  </div>
                </div>
              </div>

              <div class="form-group">
                <%= f.submit t(".login"), class: "btn btn-primary btn-lg btn-block" %>
              </div>
            <% end %>
          </div>
        </div>
        <div class="clearfix"></div>
      </div>
    </div>
  </section>
</div>
