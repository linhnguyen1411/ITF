
  <div class="main-content-area">
      <div class="container">
        <div class="row">
          <div class="col-md-6 col-sm-7 col-xs-12 text-left">
            <h1><%= current_user.name %></h1>
          </div>
          <div class="col-md-6 col-sm-5 co-xs-12 text-right">
          <div class="bread">
            <ol class="breadcrumb">
              <li><%= link_to t("page_title.home"), root_path %></li>
              <li class="active"><%= t ".breadcrumb" %></li>
            </ol>
          </div>
        </div>
        </div>
      </div>
    </section>
    <section id="user-profile" class="user-profile parallex">
      <div class="container">
        <div class="row">
          <div class="col-md-12 col-xs-12 col-sm-12">
            <div class="profile-sec ">
              <div class="profile-head">
                <div class="col-md-6 col-xs-12 col-sm-6 no-padding">
                  <div class="profile-avatar">
                    <span><%= image_tag current_user.avatar.url, class: "img-responsive img-circle" %></span>
                    <div class="profile-name">
                      <h3><%= t ".user_profile" %></h3>
                      <i>Creative Graphic Designer</i>
                      <ul class="social-btns">
                        <li><a href="#" title=""><i class="fa fa-facebook"></i></a>
                        </li>
                        <li><a href="#" title=""><i class="fa fa-google-plus"></i></a>
                        </li>
                        <li><a href="#" title=""><i class="fa fa-twitter"></i></a>
                        </li>
                      </ul>
                    </div>
                  </div>
                </div>
                <div class="col-md-6 col-xs-12 col-sm-6 no-padding">
                  <ul class="profile-count">
                    <li>171<i>Followers</i>
                    </li>
                    <li>13,725<i>Experience</i>
                    </li>
                    <li>120<i>Questions</i>
                    </li>
                  </ul>
                  <ul class="profile-connect">
                    <li><a title="" href="#">Follow</a>
                    </li>
                    <li><a title="" href="#">Hire Me</a>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="section-padding-80" id="login">
      <div class="container">
        <div class="row">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
            html: { method: :put }) do |f| %>
            <div class="col-sm-6 col-md-4">
              <div class="box-panel">
                  <div class="form-group">
                    <!-- <label>Upload Image</label> -->
                    <div class="input-group">
                      <span class="input-group-btn">
                        <span class="btn btn-default btn-file">
                          <%= t ".browse" %>
                          <%= f.file_field :avatar, accept: Settings.images.accepted_files, id: "imgInp" %>
                        </span>
                      </span>
                      <input type="text" class="form-control" readonly>
                    </div>
                    <%= image_tag current_user.avatar.url, id: "img-upload" %>
                  </div>
              </div>
            </div>

            <div class="col-md-8">
              <div class="box-panel">
                  <div class="form-group">
                    <%= f.label :name %><br />
                    <%= f.text_field :name, placeholder: t(".placeholder.name"),
                      class: "form-control" %>
                  </div>

                  <div class="form-group">
                    <%= f.label :email %><br />
                    <%= f.email_field :email, placeholder: t(".placeholder.email"),
                      class: "form-control" %>
                  </div>

                  <div class="form-group">
                    <%= f.label :password %><br />
                    <%= f.password_field :password, placeholder: t(".placeholder.password"),
                      class: "form-control" %>
                  </div>

                  <div class="form-group">
                    <%= f.label :password_confirmation %><br />
                    <%= f.password_field :password_confirmation,
                      placeholder: t(".placeholder.pw_confirmation"), class: "form-control" %>
                  </div>

                  <div class="form-group">
                    <%= f.label :current_password %><br />
                    <%= f.password_field :current_password,
                      placeholder: t(".placeholder.current_pw"), class: "form-control" %>
                  </div>

                  <%= devise_error_messages! %>

                  <div class="form-group">
                    <%= f.submit t(".update"), class: "btn btn-primary btn-lg" %>
                  </div>
              </div>
            </div>
          <% end %>
          <div class="clearfix"></div>
        </div>
      </div>
    </section>
  </div>
