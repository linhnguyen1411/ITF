<div class="main-content-area">
  <section class="page-title">
    <div class="container">
      <div class="row">
        <div class="col-md-6 col-sm-7 co-xs-12 text-left">
          <h1><%= t ".page_title" %></h1>
        </div>
        <div class="col-md-6 col-sm-5 co-xs-12 text-right">
          <div class="bread">
            <ol class="breadcrumb">
              <li><%= link_to t("page_title.home"), root_path %></li>
              <li class="active"><%= t ".breadcrumb" %></li>
            </ol>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="section-padding-80 white" id="register">
    <div class="container">
      <div class="row">
        <div class="col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3">
          <div class="box-panel">
            <a href="#" class="btn btn-default facebook">
              <i class="fa fa-facebook icons"></i> Sign Up with Facebook
            </a>
            <a href="#" class="btn btn-default google">
              <i class="fa fa-google-plus icons"></i> Sign Up with Google
            </a>
            <p class="text-center margin-top-10">
              <span class="span-line"><%= t ".or" %></span>
            </p>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>

              <div class="form-group">
                <%= f.label :name %><br />
                <%= f.text_field :name, autofocus: true, placeholder: t(".placeholder.name"),
                  class: "form-control" %>
              </div>

              <div class="form-group">
                <%= f.label :email %><br />
                <%= f.email_field :email, placeholder: t(".placeholder.email"),
                  class: "form-control" %>
              </div>

              <div class="form-group">
                <%= f.label :password %><br />
                <%= f.password_field :password, placeholder: t(".placeholder.email"),
                  class: "form-control" %>
              </div>

              <div class="form-group">
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation,
                  placeholder: t(".placeholder.pw_confirmation"), class: "form-control" %>
              </div>

              <div class="form-group">
                <%= f.submit t(".create_account"), class: "btn btn-primary btn-lg btn-block" %>
              </div>
            <% end %>
          </div>
        </div>
        <div class="clearfix"></div>
      </div>
    </div>
  </section>
</div>
