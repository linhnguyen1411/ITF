<div class="col-md-4 col-sm-12 col-xs-12 padding-top-bottom-15">
  <div class="tag-item">
    <div class="panel-left">
      <%= image_tag "no_tag_image.png", class: "tag-image img-border" %>
    </div>
    <div class="panel-right">
      <div class="tag-name">
        <%= link_to tag.name, tag %>
      </div>
      <div class="tag-follower">
        <i class="fa fa-user-plus" aria-hidden="true"></i>
        : <%= pluralize 1, t(".follower") %>
      </div>
      <div class="tag-post">
        <i class="fa fa-file-text-o bold-font" aria-hidden="true"></i>
        : <%= pluralize tag.posts_count, t(".post") %>
      </div>
      <div class="tag-function follow">
        <% if user_signed_in? && is_following(tag) %>
          <%= link_to t(".unfollow"), "javascript:void(0)", class: "btn btn-warning btn-xs",
           data:{f_id: tag.id, f_type: tag.class.name, method: :delete, id: get_follow_id(tag)} %>
        <% elsif user_signed_in? %>
          <%= link_to t(".follow"), "javascript:void(0)", class: "btn btn-success btn-xs",
           data:{f_id: tag.id, f_type: tag.class.name, method: :post, id: ""} %>
        <% end %>
      </div>
    </div>
  </div>
</div>
