<div class="listing-grid">
  <div class="row">
    <div class="col-md-2 col-sm-2 col-xs-12 hidden-xs">
      <%= link_to post.user, data: {placement: "bottom", toggle: "tooltip", original_title: post.user.name} do %>
        <% image_tag post.user.avatar.url, class: "img-responsive center-block img-medium" %>
      <% end %>
    </div>
    <div class="col-md-7 col-sm-8  col-xs-12">
      <h3><%= link_to post.title, post %></a></h3>
      <div class="listing-meta">
        <span>
          <% if post.question? %>
            <i class="fa fa-question-circle-o margin-right-0 bold-font" aria-hidden="true"></i>
          <% else %>
            <i class="fa fa-file-text-o margin-right-0 bold-font" aria-hidden="true"></i>
          <% end %>
          <strong><%= link_to post.type.upcase, posts_path(type: :article) %></strong>
        </span>
        <span>
          <i class="fa fa-clock-o" aria-hidden="true"></i>
          <%= time_ago_in_words post.created_at %>
        </span>
        <span>
          <i class="fa fa fa-eye" aria-hidden="true"></i>
          5 views
        </span>
      </div>
    </div>
    <div class="col-md-3 col-sm-2 col-xs-12">
      <ul class="question-statistic">
        <li class="active">
          <a data-toggle="tooltip" data-placement="bottom" data-original-title="<%= t ".#{post.type}.replies" %>">
            <span class="red-color">
              <i class="fa fa-reply" aria-hidden="true"></i>
              <%= post.replies.length %>
            </span>
          </a>
        </li>
        <li>
          <a data-toggle="tooltip" data-placement="bottom" data-original-title="<%= t ".votes" %>">
            <span class="red-color">
              <i class="fa fa-sort" aria-hidden="true"></i>
              <%= votes_count post.reactions %>
            </span>
          </a>
        </li>
      </ul>
    </div>

    <div class="col-md-offset-2 col-md-10 col-sm-10  col-xs-12">
      <div class="post-content margin-bottom-20 hidden-overflow">
        <%= raw post.content %>
      </div>
      <div class="tagcloud pull-right">
        <% post.tags.each do |tag| %>
          <%= link_to tag.name, tag %>
        <% end %>
      </div>
    </div>
  </div>
</div>
